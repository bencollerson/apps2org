<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:layout_weight="1">

	<ImageView android:layout_width="48dip" android:id="@+id/image"
		android:layout_height="48dip" android:layout_marginLeft="35dip"></ImageView>

	<TextView android:layout_width="fill_parent" android:id="@+id/name"
		android:text="NAME" android:layout_height="fill_parent" 
		android:layout_weight="1" android:textAppearance="?android:attr/textAppearanceMedium" android:gravity="center_vertical"></TextView>
</LinearLayout>
